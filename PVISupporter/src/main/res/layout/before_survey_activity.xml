<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    android:orientation="vertical" >

    <!--
         <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_create_survey"
        android:layout_centerHorizontal="true"
        android:text="GIÁM ĐỊNH ĐIỀU KIỆN XE CƠ GIỚI"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="#FFFFFF" />
    -->

    <Spinner
        android:id="@+id/majorSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_create_survey"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/btn_create_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_creat"
        android:layout_centerHorizontal="true"
        android:background="@drawable/item_create" />

    <TextView
        android:id="@+id/tv_creat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_list_survey"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="Tạo mới"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_list_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_list"
        android:layout_alignLeft="@+id/btn_create_survey"
        android:background="@drawable/item_list" />

    <TextView
        android:id="@+id/tv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_search_survey"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="Danh sách"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_search_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_search"
        android:layout_alignLeft="@+id/btn_create_survey"
        android:background="@drawable/item_search"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_logout_survey"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Tra cứu nhanh"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_logout_survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:text="Đăng xuất"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_logout_survey"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Phiên bản 1.0"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

</RelativeLayout>